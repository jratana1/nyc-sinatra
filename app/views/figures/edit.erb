<h1>Edit A Figure</h1>

<form action="/figures/<%= @figure.id %>" method="POST">
<input id="hidden" type="hidden" name="_method" value="patch">
  <label for="figure_name">Edit the Figure Name:</label>
  <br>
  <input id="figure_name" type="text" name="figure[name]" value="<%= @figure.name %>">

  <h3>Existing Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %><br>
  <% end %>
  <br>

  <h3>New Title</h3>
    <label>Name:</label>
    <br>
    <input  id="new_title" type="text" name="title[name]"></input>

    <h3>Existing Landmarks</h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %><br>
    <% end %>
    <br>
  
    <h3>New Landmark</h3>
  
      <label>Name:</label>
      <br>
      <input id="new_landmark" type="text" name="landmark[name]"></input>
   <br>
   <br>
    <input type="submit" value="Edit Figure">
</form>