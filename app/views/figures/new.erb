<h1>Create a new Figure</h1>

<form action="/figures" method="POST">
  <label for="figure_name">Name:</label>
  <br>
  <input id="figure_name" type="text" name="figure[name]">

  <h3>Existing Titles</h3>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" id="title_<%= title.id %>" value="<%= title.id %>"><%= title.name %><br>
  <% end %>
  <br>

  <h3>New Title</h3>
    <label>Name:</label>
    <br>
    <input  id="new_title" type="text" name="title[name]"></input>

    <h3>Existing Landmarks</h3>
    <% @landmarks.each do |landmark| %>
      <input type="checkbox" name="figure[landmark_ids][]" id="landmark_<%= landmark.id %>" value="<%= landmark.id %>"><%= landmark.name %><br>
    <% end %>
    <br>
  
    <h3>New Landmark</h3>
  
      <label>Name:</label>
      <br>
      <input id="new_landmark" type="text" name="landmark[name]"></input>
      <br>
      <label>Year:</label>
      <br>
      <input id="new_year" type="text" name="landmark[year_completed]"></input>
   <br>
   <br>
    <input type="submit" value="Create New Figure">
</form>